<section class="sports">
    <div class="game featured-game" style="background: url({{ games[0].thumbnail.src }})">
        <div class="content">
            <h1>{{ games[0].full_title }}</h1>
        </div>
    </div>
    <div class="sub">
        {% for i in 1..3 %}
        <div class="game" style="background: url({{ games[i].thumbnail.src }})">
            <div class="content">
                <h1>{{ games[i].short_title }}</h1>
                <h2>{{ games[i].lbj_score }}&ndash;{{ games[i].other_score }}</h2>
            </div>
        </div>
        {% endfor %}
    </div>
</section>