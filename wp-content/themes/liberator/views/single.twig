{% extends "base.twig" %}

{% block content %}

	<div class="page-article">

    {% include "article-header-nav.twig" with {'featured' : post} %}


		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				{{post.content}}
			</section>

			<div class="social">
			  <a href="{{ share.facebook }}"><img src="{{function('bloginfo','template_directory')}}/assets/img/social/facebook.png" height="44" width="44" alt="Share on Facebook"></a>
			  <a href="{{ share.twitter }}"><img src="{{function('bloginfo','template_directory')}}/assets/img/social/twitter.png" height="44" width="44" alt="Share on Twitter"></a>
			  <a href="{{ share.tumblr }}"><img src="{{function('bloginfo','template_directory')}}/assets/img/social/tumblr.png" height="44" width="44" alt="Share on Tumblr"></a>

			</div>

		</article>
	</div><!-- /content-wrapper -->

	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.4&appId=983692611651336";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

	<script src="https://apis.google.com/js/platform.js" async defer></script>
{% endblock %}
