{% extends "base.twig" %}

{% block content %}

    {% include "nav.twig" with {"bg" : "white"} %}


    <section class="articles flow">

            {% for post in posts %}
              <div class="article image-right">
                <a href="{{ post.path }}">
                  <h2>{{ post.title }}</h2>
                </a>
                <p class="description">
                  {{ post.description|default(function('strip_tags', post.content) < 300 ? function('strip_tags', post.content)|slice(0,300) ~ "..." : function('strip_tags', post.content)) }}
                </p>
                <p class="byline">by <span class="author">{{ post.article_author|default(post.author) }}</span></p>
              </div>
          {% endfor %}


        {# <div class="pagination"> #}
          {# <a href="#" class="button">More Articles</a> #}
        {# </div> #}

    </section>


{% endblock %}

